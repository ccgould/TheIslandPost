<ui:ContentDialog x:Class="TheIslandPostManagerWPF.Views.ImageViewerContentDialogPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:local="clr-namespace:TheIslandPostManagerWPF.Views"
      mc:Ignorable="d"
      d:DesignHeight="1000"
      d:DesignWidth="750"
      ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
      ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      CloseButtonText="Close"
      ScrollViewer.CanContentScroll="False"
      DialogMaxWidth="750"
      >

    <ui:ContentDialog.Resources>
        <Style BasedOn="{StaticResource {x:Type ui:ContentDialog}}" 
               TargetType="{x:Type local:ImageViewerContentDialogPage}"/>
    </ui:ContentDialog.Resources>

    <ui:Image Source="{Binding Image.HDImage}" x:Name="ImageViewer" Height="500"/>
    
</ui:ContentDialog>
